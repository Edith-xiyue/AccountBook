<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_particular_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_2"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingLeft="@dimen/dp_10">

    <TextView
        android:id="@+id/recycle_particular_money"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_80"
        android:textSize="@dimen/sp_28"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center|right"/>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_60"
        android:background="@color/colorAccent"
        android:layout_marginLeft="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/recycle_particular_money"/>

    <TextView
        android:id="@+id/recycle_particular_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/recycle_particular_remark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toRightOf="@+id/recycle_particular_money"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="bottom|right"/>
</androidx.constraintlayout.widget.ConstraintLayout>