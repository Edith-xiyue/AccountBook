<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_fragment_background_color">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone">

        <include
            layout="@layout/view_title" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_summarizing_tabLayout_background_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_blue"
        app:tabTextColor="@color/color_gray"
        app:tabIndicatorHeight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/tab_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/filter_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/circular_bead_yellow"
        app:layout_constraintBottom_toTopOf="@+id/arc"
        android:layout_marginBottom="@dimen/dp_50"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone">

        <EditText
            android:id="@+id/filter_year"
            android:layout_width="@dimen/dp_45"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"
            android:maxLength="4"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/circular_bead_white_frame"
            android:gravity="center"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/filter_month"/>

        <TextView
            android:id="@+id/year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/year_text"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/filter_year"/>

        <EditText
            android:id="@+id/filter_month"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"
            android:maxLength="2"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_50"
            android:background="@drawable/circular_bead_white_frame"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/filter_year"
            app:layout_constraintRight_toLeftOf="@+id/filter_day"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month_text"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/color_black"
            android:layout_gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/filter_month"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/filter_day"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_16"
            android:maxLength="2"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/circular_bead_white_frame"
            android:gravity="center"
            android:inputType="number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/filter_month"
            app:layout_constraintRight_toLeftOf="@+id/filter_button"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/day_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_text"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_black"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/filter_day"
            android:visibility="gone"/>

        <Button
            android:id="@+id/filter_button"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_40"
            android:text="@string/fragment_summarizing_filter_button_string"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_normal"
            android:layout_marginRight="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.example.accountbook.tools.ArcView
        android:id="@+id/arc"
        android:background="@color/color_transparent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>